<body>
<div align="center">
	<div>
		<h1> 베스트 상품</h1>
	</div>
	<table class="blueone" >
		<c:choose>
			<c:when test="${empty itemList }" >
				<tr>
					<td colspan="4">
						<a style="text-align: center;">등록 상품이 없습니다.</a>
					</td>
				</tr>
			</c:when>
			<c:otherwise>
				<c:set var="i" value="0" />
				<c:set var="j" value="4" />
				<c:forEach items="${itemList }" var="list">
					<c:if test="${i%j eq 0 }">
						<tr>
					</c:if>
						<td>
							<h1 style="font-size: xx-large;">
								${list }
							</h1>
						</td>
					<c:if test="${i%j eq j-1 }">
						</tr>
					</c:if>
					<c:set var="i" value="${i+1 }" />
				</c:forEach>
			</c:otherwise>
		</c:choose>
	</table>
</div>
<div style="height: 30px;"></div>
